<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.bicicletas.ui.ClienteController"
            prefWidth="720" prefHeight="450">

    <top>
        <HBox spacing="10">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <Label text="Registrar Cliente" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Volver" onAction="#volverAlMenu"/>
        </HBox>

    </top>

    <center>
        <VBox spacing="12">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <GridPane hgap="10" vgap="10">
                <Label text="Nombre completo:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtNombre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Identificación:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtIdentificacion" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Teléfono:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtTelefono" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Dirección:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="txtDireccion" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="10">
                <Button text="Guardar" onAction="#guardarCliente"/>
                <Button text="Limpiar" onAction="#limpiarFormulario"/>
            </HBox>

            <Separator/>

            <Label text="Clientes registrados" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

            <TableView fx:id="tblClientes" prefHeight="240">
                <columns>
                    <TableColumn fx:id="colNombre" text="Nombre" prefWidth="220"/>
                    <TableColumn fx:id="colIdentificacion" text="Identificación" prefWidth="140"/>
                    <TableColumn fx:id="colTelefono" text="Teléfono" prefWidth="120"/>
                    <TableColumn fx:id="colDireccion" text="Dirección" prefWidth="220"/>
                </columns>
            </TableView>

        </VBox>
    </center>

</BorderPane>
