<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.bicicletas.ui.HistorialController"
            prefWidth="720" prefHeight="450">

    <top>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <Label text="Historial por Bicicleta" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Volver" onAction="#volverAlMenu"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="12">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            
            <GridPane hgap="10" vgap="10">
                <Label text="ID de la Bicicleta:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtBicicletaId" promptText="Ej: 123" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Button text="Buscar" onAction="#buscarHistorial" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
            </GridPane>

            <Separator/>

            <Label text="Resultados del Historial" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

            <!-- Este es el "cuadrito abajo" para mostrar la informaciÃ³n -->
            <TextArea fx:id="areaResultados" prefHeight="240" editable="false" wrapText="true" 
                      style="-fx-font-family: 'Consolas', 'Monospaced'; -fx-font-size: 13px;"/>

        </VBox>
    </center>

</BorderPane>
